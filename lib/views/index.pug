extends layout.pug
block append content
  .container
    .jumbotron
      h1 Find snags in the TTC!
      .explainer Feel like the busses on frequent routes bottle up, turning a less-then ten minute turnaround up to 30 minutes between groups? Use this app to prove this and get the attenion of the service?
    .col
    form(action="/route", type="get")
      .label Pick a date!
      input(type="date", class="datepicker")
      .label Pick a bus!
      div
        input(type="radio", id="buschoice1", name="buschoice", value="60" checked)
        label(for="buschoice1") Bus 1
        input(type="radio", id="buschoice2", name="buschoice", value="7")
        label(for="buschoice1") Bus 2
      input(type="submit", value="submit")

